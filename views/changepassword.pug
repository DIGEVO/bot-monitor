extends layout

block content
    if (error && error.length > 0)
        br
        h4(class='error-msg')= error
        br
    div(class='container starter-template')        
        form(role='form' class='form-signin' action="/users/changepassword" method="post")
            h2(class="form-signin-heading") Cambiar contrase単a
            div(class='form-group')
                input(class='form-control' type='text', name="username", value=user disabled)
            div(class='form-group')
                input(class='form-control' type='password', name="oldpassword", placeholder='Contrase単a anterior' required)
            div(class='form-group')
                input(class='form-control' type='password', name="newpassword", placeholder='Nueva Contrase単a' required)
            div(class='form-group')
                input(class='form-control' type='password', name="retrypassword", placeholder='Repetir Contrase単a' required)                
            div(class='row no-gutters')
                div(class='col')
                    button(class='btn btn-default btn-block' type='submit') Cambiar
                div(class='col')
                div(class='col')
                    a(href='/monitor' class="btn btn-primary btn-block" role="button") Cancelar
            br
            br
            div(class=`${message.length?'alert alert-danger':''}` role="alert") !{message}

