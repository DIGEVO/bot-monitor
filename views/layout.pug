  body
    nav(class='navbar navbar-expand-md navbar-dark bg-dark fixed-top')
      a(class='navbar-brand', href='http://digevo.com/')
        img(src='/images/digevo.png' class='' alt='Digevo image')
      button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
        span(class='navbar-toggler-icon')
      div(class="collapse navbar-collapse" id="navbarCollapse")
        ul(class="navbar-nav mr-auto")
          if group >= 0
            li(class="nav-item")
              a(class="nav-link" href="#")  Bots
          if group >= 0
            li(class="nav-item")
              a(class="nav-link" href="#")  Cambiar Contraseña
          if group === 0
            li(class="nav-item")
              a(class="nav-link" href="#") Gestionar Usuarios
          
        div(class="form-inline mt-2 mt-md-0")
          label(class="mr-sm-2" style='color:white;') #{user}
          | &nbsp&nbsp&nbsp
          a(href="/logout" class="btn btn-outline-success my-2 my-sm-0" role='button') Salir 
             
    block content

    footer(class='footer navbar-fixed-bottom')
      div(class='container')
        span(class='text-muted')=  '© DIGEVO ' + new Date().getFullYear()
    
