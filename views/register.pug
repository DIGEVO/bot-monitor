extends layout

block content
    if (error && error.length > 0)
        br
        h4(class='error-msg')= error
        br
    div(class='container starter-template')        
        form(role='form' class='form-signin' action="/register" method="post")
            h2(class="form-signin-heading") Registrarse
            div(class='form-group')
                input(class='form-control' type='text', name="username", placeholder='Usuario')
            div(class='form-group')
                input(class='form-control' type='password', name="password", placeholder='Contrase√±a')
            div(class='row no-gutters')
                div(class='col')
                    button(class='btn btn-default btn-block' type='submit') Enviar
                div(class='col')
                div(class='col')
                    button(class='btn btn-primary btn-block' type="button") Cancelar

            