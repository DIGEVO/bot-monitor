extends layout

block content
    div(class='container-fluid starter-template' )
        div(class='row height-limiter-95')
            div(class='col')

            div(class='col')
                h3  Por favor, seleccione el usuario para editar o eliminar
                | <br>

                form(class='form-group bot-form' method='POST' action='/users/cruduser')                
                    ul(id='botlist')
                        each obj in users
                            li
                                input(type='radio' name='id' value=obj._id)
                                b   #{obj.username}
                                |   (#{obj.role.join(', ')})
                    |   <br>
                    button(type='submit' name='add' value=1 class='btn btn-primary')   Adicionar
                    |   &nbsp&nbsp
                    button(type='submit' name='edit' value=1 class='btn btn-secondary')   Editar
                    |   &nbsp&nbsp
                    button(type='submit' name='remove' value=1 class='btn btn-secondary' onclick="return confirm('¿Está seguro de eliminar el usuario seleccionado?');")   Eliminar
                    br
                    br
                    div(class=`${message.length?'alert alert-danger':''}` role="alert") !{message}

            div(class='col')

